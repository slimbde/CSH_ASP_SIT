@model SIT.Models.Overtime

@{
	ViewBag.Title = "Delete";
	var when = Model.Date.ToString("dd.MM.yyyy");
	var util = "-";
	if (Model.Utilized != null)
	{
		util = ((DateTime)Model.Utilized).ToString("dd.MM.yyyy");
	}
}

<h2>Вы действительно хотите удалить?</h2>

<div>
	<h4>Переработку</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>Сотрудник</dt>
		<dd>@Html.DisplayFor(model => model.Usr.FullName)</dd>

		<dt>Когда</dt>
		<dd>@Html.DisplayFor(model => when)</dd>

		<dt>@Html.DisplayNameFor(model => model.Duration)</dt>
		<dd>@Html.DisplayFor(model => model.Duration)</dd>

		<dt>@Html.DisplayNameFor(model => model.Utilized)</dt>
		<dd>@Html.DisplayFor(model => util)</dd>
		<hr />
		<dt></dt>
		<dd>
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()

				<div class="form-actions no-color">
					<input type="submit" value="Удалить" class="btn btn-danger" />
				</div>
			}
		</dd>
	</dl>
	@Html.ActionLink("Назад", "Index")
</div>
