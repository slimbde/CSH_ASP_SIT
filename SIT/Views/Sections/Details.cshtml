@using SIT.Models
@using System.Data.Entity
@model Section
@{
	ViewBag.Title = "Details";
	var chiefFullName = Model.GetUserFullName(Model.ChiefId);
}

<h2>Подробно</h2>

<div>
	<h4>Бюро</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.LabelFor(model => model.Name)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Name)
		</dd>

		<dt>
			@Html.LabelFor(model => model.ChiefId)
		</dt>

		<dd>
			@Html.DisplayFor(model => chiefFullName)
		</dd>

		<hr />
		<dt>@Html.LabelFor(m => m.Staff)</dt>
		<dd>
			@foreach (var item in Model.Staff)
			{
				@Html.DisplayFor(u => item.FullName)<br />
			}
		</dd>
	</dl>
</div>
<p>
	@Html.ActionLink("Назад", "Index") |
	@Html.ActionLink("Изменить", "Edit", new { id = Model.Id })
</p>
