@model IEnumerable<Section>
@using SIT.Models
@{
	ViewBag.Title = "Index";
}


<div class="row">
	<div class="col-md-10">
		<h2>Список бюро</h2>

		<p>
			@Html.ActionLink("Добавить бюро", "Create", null, new { @class = "pull-right" })
		</p>
		<table class="table">
			<tr>
				<th>
					@Html.LabelFor(m => m.First().Name)
				</th>
				<th>
					@Html.LabelFor(m => m.First().ChiefId)
				</th>
				<th>
					@Html.LabelFor(m => m.First().Staff)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				var fullName = item.Chief.FullName;
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => fullName)
					</td>
					<td>
						@item.Staff.Count
					</td>
					<td>
						@Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
						@Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
						@Html.ActionLink("Удалить", "Delete", new { id = item.Id })
					</td>
				</tr>
			}

		</table>
	</div>
</div>