	<div class="form-group">
		<label for="" class="control-label col-md-4">@Html.DisplayNameFor(m => m.IndustrialSecurityExam)</label>
		<div class="col-md-8">
			<input type='date' class="form-control date" name="IndustrialSecurityExam" data-val="false" value="@IndustrialSecurityExam" />
		</div>
	</div>

	<div class="form-group">
		<label for="" class="control-label col-md-4">@Html.DisplayNameFor(m => m.GotHelmet)</label>
		<div class="col-md-8">
			<input type='date' class="form-control date" name="GotHelmet" data-val="false" value="@GotHelmet" />
		</div>
	</div>

	<div class="form-group">
		<label for="" class="control-label col-md-4">@Html.DisplayNameFor(m => m.GotSuit)</label>
		<div class="col-md-8">
			<input type='date' class="form-control date" name="GotSuit" data-val="false" value="@GotSuit" />
		</div>
	</div>

	<div class="form-group">
		<label for="" class="control-label col-md-4">@Html.DisplayNameFor(m => m.GotBoots)</label>
		<div class="col-md-8">
			<input type='date' class="form-control date" name="GotBoots" data-val="false" value="@GotBoots" />
		</div>
	</div>

	<div class="form-group">
		<label for="" class="control-label col-md-4">@Html.DisplayNameFor(m => m.GotCoat)</label>
		<div class="col-md-8">
			<input type='date' class="form-control date" name="GotCoat" data-val="false" value="@GotCoat" />
		</div>
	</div>
</div>