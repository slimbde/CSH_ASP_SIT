@using SIT.Models
@model IEnumerable<ApplicationUser>
@{
	ViewBag.Title = "Index";
}

<style>
	table tbody {
		display: block;
		max-height: 66vh;
		overflow-y: scroll;
	}

		table thead, table tbody tr {
			display: table;
			width: 100%;
			table-layout: fixed;
		}

	::-webkit-scrollbar {
		width: 0px; /*Remove scrollbar space */
		background: transparent; /* Optional: just make scrollbar invisible */
	}
</style>

<h2>Список сотрудников</h2>
<p>
	@Html.ActionLink("Добавить сотрудника", "Register", "Account", null, new { @class = "pull-right" })
</p>

<table class="table table-condensed table-hover">
	<thead>
		<tr>
			<th width="23%">
				@Html.DisplayNameFor(model => model.FullName)
			</th>
			<th width="15%">
				@Html.DisplayNameFor(model => model.Email)
			</th>
			<th width="10%">
				Сот.
			</th>
			<th width="10%">
				@Html.DisplayNameFor(model => model.TabNo)
			</th>
			<th width="22%">
				@Html.DisplayNameFor(model => model.SectionId)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.OrderBy(m => m.Surname))
		{
			<tr>
				<td width="23%">
					@Html.DisplayFor(modelItem => item.FullName)
				</td>
				<td width="15%">
					@Html.DisplayFor(modelItem => item.Email)
				</td>

				<td width="10%">
					@Html.DisplayFor(modelItem => item.PhoneNumber)
				</td>
				<td width="10%">
					@Html.DisplayFor(modelItem => item.TabNo)
				</td>
				<td width="22%">
					@Html.DisplayFor(modelItem => item.Section.Name)
				</td>
				<td>
					@Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
					@Html.ActionLink("Удалить", "Delete", new { id = item.Id })
				</td>
			</tr>
		}
	</tbody>
</table>
