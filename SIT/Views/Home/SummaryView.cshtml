@model ApplicationUser
@using SIT.Models
@{
	string role="";

	if (User.IsInRole("admin"))
	{ role = "РУКОВОДИТЕЛЬ УПРАВЛЕНИЯ"; }
	else if (User.IsInRole("manager"))
	{ role = "РУКОВОДИТЕЛЬ ОТДЕЛА"; }
	else if (User.IsInRole("chief"))
	{ role = "РУКОВОДИТЕЛЬ БЮРО"; }
	else
	{ role = "СОТРУДНИК"; }
}

@if (Model != null)
{
	<h2>@Model.FullName</h2>
	<small>@role</small>
	<hr />
	<div class="row">
		<div class="col-md-4">
			<dl class="dl-horizontal">
				<dt>@Html.DisplayNameFor(m => m.MedExam)</dt>
				@if (Model.MedExam != null)
				{
					var ok = Model.MedExamOkay;
					<dd class="@(ok?"text-success":"text-danger")">@Model.MedExam.Value.Date.ToString("dd.MM.yyyy")&nbsp;&nbsp;&nbsp;@(ok ? "ОК" : "ПРОЙТИ")</dd>
				}
				else
				{
					<dd class="text-danger">---&nbsp;&nbsp;&nbsp;ПРОЙТИ</dd>
				}

				<dt>@Html.DisplayNameFor(m => m.LabourSecurityExam)</dt>
				@if (Model.LabourSecurityExam != null)
				{
					var ok = Model.LabourSecurityExamOkay;
					<dd class="@(ok?"text-success":"text-danger")">@Model.LabourSecurityExam.Value.Date.ToString("dd.MM.yyyy")&nbsp;&nbsp;&nbsp;@(ok ? "ОК" : "СДАТЬ")</dd>
				}
				else
				{
					<dd class="text-danger">---&nbsp;&nbsp;&nbsp;СДАТЬ</dd>
				}

				<dt>@Html.DisplayNameFor(m => m.IndustrialSecurityExam)</dt>
				@if (Model.IndustrialSecurityExam != null)
				{
					var ok = Model.IndustrialSecurityExamOkay;
