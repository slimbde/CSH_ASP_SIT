				}
				else
				{
					<dd class="text-danger">---&nbsp;&nbsp;&nbsp;СДАТЬ</dd>
				}
			</dl>
		</div>
		<div class="col-md-8">
			<dl class="dl-horizontal">
				<dt>@Html.DisplayNameFor(m => m.GotHelmet)</dt>
				@if (Model.GotHelmet != null)
				{
					var ok = Model.GotHelmetOkay;
					<dd class="@(ok?"text-success":"text-danger")">@Model.GotHelmet.Value.Date.ToString("dd.MM.yyyy")&nbsp;&nbsp;&nbsp;@(ok ? "ОК" : "ПОЛУЧИТЬ")</dd>
				}
				else
				{
					<dd class="text-danger">---&nbsp;&nbsp;&nbsp;ПОЛУЧИТЬ</dd>
				}

				<dt>@Html.DisplayNameFor(m => m.GotSuit)</dt>
				@if (Model.GotSuit != null)
				{
					var ok = Model.GotSuitOkay;
					<dd class="@(ok?"text-success":"text-danger")">@Model.GotSuit.Value.Date.ToString("dd.MM.yyyy")&nbsp;&nbsp;&nbsp;@(ok ? "ОК" : "ПОЛУЧИТЬ")</dd>
				}
				else
				{
					<dd class="text-danger">---&nbsp;&nbsp;&nbsp;ПОЛУЧИТЬ</dd>
				}

				<dt>@Html.DisplayNameFor(m => m.GotBoots)</dt>
				@if (Model.GotBoots != null)
				{
					var ok = Model.GotBootsOkay;
					<dd class="@(ok?"text-success":"text-danger")">@Model.GotBoots.Value.Date.ToString("dd.MM.yyyy")&nbsp;&nbsp;&nbsp;@(ok ? "ОК" : "ПОЛУЧИТЬ")</dd>
				}
