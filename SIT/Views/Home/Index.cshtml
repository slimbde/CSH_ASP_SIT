@using SIT.Models
@model ApplicationUser
@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="opacity:0.8;">
	@Html.Partial("SummaryView", Model)
</div>

<div class="row">
	<div class="col-md-4">
		<h2>Отпуска</h2>
		<p>Просмотр графика отпусков.<br />Участие в голосовании при составлении графика отпусков.</p>
		<p>@Html.ActionLink("Перейти", "Index", "Vacations", null, new { @class = "btn btn-default" })</p>
	</div>
	<div class="col-md-4">
		<h2>Переработки</h2>
		<p>Просмотр сведений о переработках сотрудников.<br />Учет переработок.</p>
		<p>@Html.ActionLink("Перейти", "Index", "Overtimes", null, new { @class = "btn btn-default" })</p>
	</div>

	@if (User.IsInRole("admin") || User.IsInRole("manager") || User.IsInRole("chief"))
	{
		<div class="col-md-4">
			<h2 style="color:#987316">Субботники</h2>
			<p>Распределение персонала по субботникам.<br />Учет субботников.</p>
			<p>@Html.ActionLink("Перейти", "Index", "Labours", null, new { @class = "btn btn-default", @style = "border:2px solid darkgoldenrod" })</p>
		</div>
	}
</div>